{
	"name": "paramly",
	"version": "0.0.16",
	"description": "Library CLI.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/paramly"
	},
	"bugs": {
		"url": "https://github.com/payfunc/paramly/issues"
	},
	"homepage": "https://github.com/func/paramly#readme",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"devDependencies": {
		"@types/jest": "^28",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
	  "eslint": "^8.15.0",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20230626",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28",
    "prettierx": "github:utily/prettierx#utily-20230626",
    "ts-jest": "^28",
    "typescript": "^4.7.3"
	},
		"overrides": {
		"semver": "^7.5.3",
		"optionator": "^0.9.3"
	}
}
