{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "dist/mjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"lib": [
			"es2020"
		],
		"types": [
			"node",
			"jest"
		],
		"paths": {
			"*": [
				"types/*"
			]
		}
	},
	"include": [
		"*.ts",
		"**/*.ts"
	],
	"exclude": [
		"*.spec.ts",
		"**/*.spec.ts",
		"node_modules/",
		"dist/"
	],
	"files": [
		"index.ts"
	],
	"typeAcquisition": {
		"enable": true
	}
}
